    "@octokit/core": "^6.0.1",
    "@octokit/plugin-throttling": "^9.0.3",
    "@octokit/rest": "^20.0.2",
    "@octokit/types": "^12.6.0",
    "@probot/octokit-plugin-config": "^3.0.2",
    "bugzilla": "^3.1.2",
    "dotenv": "^16.4.5",
    "jira.js": "^3.0.5",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@actions/github": "^6.0.0",
